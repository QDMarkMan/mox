# Environment Variables Example
# Copy this file to .env and fill in your values

# OpenAI API Configuration
LOCAL_OPENAI_API_KEY=
LOCAL_OPENAI_MODEL=
LOCAL_OPENAI_BASE_URL=

# Claude API Configuration 
# Not using Claude for now
CLAUDE_API_KEY=
CLAUDE_API_BASE=

# Agent Configuration
AGENT_VERBOSE=false
AGENT_MAX_ITERATIONS=10


# =============================================================================
# MolX Core - Memory/Database Configuration
# =============================================================================

# Storage backend: "memory" (default) or "postgres"
MOLX_MEMORY_BACKEND=postgres

# PostgreSQL configuration (required when MOLX_MEMORY_BACKEND=postgres)
MOLX_DATABASE_URL=postgresql+asyncpg://molx_db_user:[xxxx]@localhost:5432/molx_db

# Connection pool settings
MOLX_DATABASE_POOL_SIZE=5
MOLX_DATABASE_MAX_OVERFLOW=10
MOLX_DATABASE_POOL_TIMEOUT=30.0

# Session settings
MOLX_SESSION_TTL=3600
MOLX_SESSION_CLEANUP_INTERVAL=300

